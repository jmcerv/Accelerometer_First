<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wizard"
    android:id="@+id/container"
    tools:context="com.example.android.accelerometer_first.gaming">

    <ImageView
        android:id="@+id/seta1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <ImageView
        android:id="@+id/seta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/seta1"
        android:tag="check" />

    <ImageView
        android:id="@+id/seta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/seta2"
        android:tag="check" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/magic"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/magic"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cast Spell!"
        android:textSize="30dp"
        android:onClick="CastSpell"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
